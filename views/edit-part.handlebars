
   

<div class="parts card">
  <div class="card-header">
    <h2>Edit Part</h2>
  </div>
  <form id="edit-parts-form" class="card-body">
    <input type="hidden" id="parts-id" value="{{parts.id}}" />

    <label class="form-label" for="parts-title">Title</label>
    <input type="text" id="parts-title" value="{{parts.title}}" class="form-input" />

    <label class="form-label" for="parts-body">Content</label>
    <textarea id="parts-body" class="form-input">{{parts.body}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>
