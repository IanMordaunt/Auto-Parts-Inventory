<div class="row">
    {{#each data as |store|}}
    <div class="col-4">
        <div class="card m-5 text-center shadow-lg" id="blogPost{{store.id}}" style="width: 16rem;" onclick="handleStoreClick('{{store.id}}')">
            <div class="card-body">
                <h5 class="card-title">{{store.store_name}}</h5>
                <p class="card-text">{{store.location}}</p>
                <span class="card-text">{{store.hours_operation}}</span>
                <img class="store_img" src="{{store.store_img}}" alt="storefront">
                <img class="url" src="{{store.url}}" alt="storefront"> 
            </div>
        </div>
    </div>
    {{/each}}
</div>

<script src="js/homepage.js"></script>