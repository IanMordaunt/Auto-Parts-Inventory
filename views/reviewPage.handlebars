<div class="row">
    {{#each result as |r|}}
    <div class="col-xl-4 col-md-8 col-12 mt-5">
        <div class="card shadow-lg " style="width: 30rem;">
            <div class="card-body">
                <p style="text-align:center" class="card-user-id"><strong>User ID: </strong> {{r.user.user_name}}</p>
                <p style="text-align:center" class="card-reviews"><strong>Review: {{r.review_text}} </strong></p>
            </div>
        </div>
    </div>
    {{/each}}
</div>

